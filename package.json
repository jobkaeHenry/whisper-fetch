{
  "name": "@jobkaehenry/whisper-fetch",
  "version": "1.0.0",
  "description": "Idle-aware, resumable background prefetch (Range + Abort) with OPFS/IDB storage. Next.js ready.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/usePrefetcher.d.ts",
      "import": "./dist/react/usePrefetcher.js"
    }
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "jobkaehenry",
  "repository": "https://github.com/jobkaeHenry/whisper-fetch",
  "homepage": "https://github.com/jobkaeHenry/whisper-fetch#readme",
  "bugs": {
    "url": "https://github.com/jobkaeHenry/whisper-fetch/issues"
  },
  "keywords": [
    "prefetch",
    "idle",
    "range",
    "opfs",
    "idb",
    "background-ownload",
    "download",
    "cache",
    "react"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "react": ">=17"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/react/usePrefetcher.ts --format esm --dts --minify --external react",
    "dev": "tsup src/index.ts src/react/usePrefetcher.ts --watch --format esm --dts --external react",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs:develop": "gatsby develop",
    "docs:build": "gatsby build",
    "docs:serve": "gatsby serve",
    "docs:clean": "gatsby clean"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/node": "^24.10.1",
    "framer-motion": "^12.23.24",
    "gatsby": "^5.15.0",
    "gatsby-plugin-manifest": "^5.15.0",
    "gatsby-plugin-typescript": "^5.15.0",
    "gatsby-source-filesystem": "^5.15.0",
    "prism-react-renderer": "^2.4.1",
    "react-dom": "^19.2.0"
  }
}
